{
  "name": "shopalot",
  "version": "1.0.0",
  "description": "An open-source shopping cart application.",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node bin/www",
    "server": "nodemon bin/www",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client-install && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TracySpitler/Shopalot.git"
  },
  "author": "The Cod√©teers",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/TracySpitler/Shopalot/issues"
  },
  "homepage": "https://github.com/TracySpitler/Shopalot#readme",
  "dependencies": {
    "body-parser": "^1.18.3",
    "concurrently": "^4.1.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "mongoose": "^5.4.5"
  },
  "devDependencies": {
    "nodemon": "^1.18.9"
  }
}
