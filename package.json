{
  "name": "shopalot",
  "version": "1.0.0",
  "description": "An open-source shopping cart application.",
  "main": "server.js",
  "scripts": {
    "start": "export NODE_ENV=\"production\" && node server/server.js",
    "build": "react-scripts build",
    "dev": "concurrently \"react-scripts start\" \"nodemon server/server.js\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "prod": "export NODE_ENV=\"production\" && nodemon server/server.js"
  },
  "proxy": "http://localhost:8080",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TracySpitler/Shopalot.git"
  },
  "author": "The Cod√©teers",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/TracySpitler/Shopalot/issues"
  },
  "homepage": "https://github.com/TracySpitler/Shopalot#readme",
  "dependencies": {
    "bcrypt": "^3.0.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "concurrently": "^4.1.0",
    "connect-mongo": "^2.0.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "jsonwebtoken": "^8.4.0",
    "jwt-decode": "^2.2.0",
    "mongoose": "^5.4.5",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-google-oauth": "^1.0.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "nodemon": "^1.18.9"
  }
}
